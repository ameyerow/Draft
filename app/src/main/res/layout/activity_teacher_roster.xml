<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">
    <RelativeLayout
        android:id="@+id/layout_partnered"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_email1"
            android:layout_marginTop="85dp">
            <ImageView
                android:id="@+id/imageView_email_first"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_partnered_first" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_email2"
            android:layout_below="@id/layout_email1"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/imageView_email_second"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_partnered_second"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_singlePerson"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_singlePerson"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:transitionName="@string/toolbar"/>
        <RelativeLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/imageView_empty"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/empty"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/textView_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_empty"
                android:layout_centerHorizontal="true"
                android:text="@string/empty"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <ListView
                android:id="@android:id/list"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>