<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/videoView_intro"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView_intro"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:transitionName="image"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:id="@+id/imageView_draft"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:visibility="gone"
            android:theme="?attr/actionBarTheme"
            android:titleTextColor="@android:color/black"
            android:transitionName="@string/toolbar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_continue"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/click_continue"
            android:textColor="@android:color/black"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:background="@android:color/transparent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_oceanside"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/oceanside_high_school"
            android:text="@string/oceanside"
            android:visibility="gone"
            android:fontFamily="sans-serif"
            android:transitionName="oceanside"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="200dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teacher"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/button_teacher"
            android:backgroundTint="@color/colorBackground"
            android:transitionName="button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/student"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@id/button_teacher"
            android:id="@+id/button_student"
            android:backgroundTint="@color/colorBackground"
            android:transitionName="button"/>
    </RelativeLayout>
</FrameLayout>