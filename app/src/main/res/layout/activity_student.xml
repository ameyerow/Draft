<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:transitionName="@string/toolbar"/>
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/progressBar_draft"
            android:layout_centerHorizontal="true"
            app:rcIconSize="25dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgressColor="@color/colorBackground"
            app:rcSecondaryProgressColor="@color/colorAccent"
            app:rcBackgroundColor="@color/colorLightest"
            app:rcIconBackgroundColor="@color/colorPrimary"
            app:rcIconSrc="@drawable/ic_action_name"
            app:rcIconPadding="5dp"
            android:layout_below="@id/toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/progressBar_draft"
            android:id="@+id/textView_draft"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imageView_profile"
            android:layout_below="@id/textView_draft"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView_profile"
            android:layout_below="@id/imageView_profile"
            android:layout_marginBottom="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView_profile"
            android:layout_centerHorizontal="true"
            android:background="@color/colorLight"/>
        <RelativeLayout
            android:id="@+id/layout_choices"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_profile"
            android:animateLayoutChanges="true">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imageView_first"
                android:src="@drawable/contact_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView_first"
                android:layout_toEndOf="@id/imageView_first"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imageView_second"
                android:layout_below="@id/imageView_first"
                android:src="@drawable/contact_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView_second"
                android:layout_below="@id/imageView_first"
                android:layout_toEndOf="@id/imageView_second"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imageView_third"
                android:layout_below="@id/imageView_second"
                android:src="@drawable/contact_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView_third"
                android:layout_below="@id/imageView_second"
                android:layout_toEndOf="@id/imageView_third"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_drafted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_profile"
            android:visibility="gone">
            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/imageView_teacher"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/contact"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView_teacher"
                android:layout_below="@id/imageView_teacher"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/email"
                android:layout_below="@id/textView_teacher"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageView_email"
                android:layout_below="@id/textView_teacher"
                android:layout_marginTop="20dp"
                android:id="@+id/textView_email"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_oceanside"
            android:drawableLeft="@drawable/oceanside_high_school"
            android:text="@string/oceanside"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"/>
    </RelativeLayout>
</FrameLayout>